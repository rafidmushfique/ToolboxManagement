@model TMS.Models.TblToolsSetup


<div id="modal-placeholder">
    @{
        var message = TempData["msg"].ToString();
        if (!string.IsNullOrEmpty(message))
        {
            <script>
            alert("@message");
            </script>
        
        }
    }

</div>



<!-- Content Header (Page header) -->
<section class="content-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="breadcrumb-item"><a href="/ToolSetup/Index">Tools Setup Information</a></li>
            <li class="breadcrumb-item active">Add Tools Setup Information</li>
        </ol>
 
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="row">
        <div class="col-12">
    <div class="card" style="border:1px solid; border-color:cadetblue; padding:10px">

                <form class="form-horizontal" asp-controller="ToolSetup" method="post" asp-action="CreateToolSetup">
           
            <div class="card-body">

               <div class="form-group">
                            <div class="form-outline">
                                <label for="ToolCode" class="col-sm-2 control-label">Tool Code</label>
                                <div class="col-sm-4">
                                <input type="text" asp-for="ToolCode" class="form-control" placeholder="" readonly>
                                <span asp-validation-for="ToolCode"></span>
                            </div> 
                            </div>
               </div>
               <div class="form-group">
                       <div class="form-outline">
                          <label for="ToolName" class="col-sm-2 control-label">Tool Name</label>
                          <div class="col-sm-10">
                          <input type="text" asp-for="ToolName" class="form-control" placeholder="">
                          <span asp-validation-for="ToolName"></span>
                          </div>
                       </div>
               </div>
                         <div class="form-group">
                       <div class="form-outline">
                          <label for="ToolName" class="col-sm-2 control-label">Brand</label>
                        <div class="col-sm-10">
                          <input type="text" asp-for="Brand" class="form-control" placeholder="">
                                    <span asp-validation-for="Brand"></span>
                       </div> 
                       </div>
               </div>
                          <div class="form-group">
                       <div class="form-outline">

                          <label for="ToolName" class="col-sm-2 control-label">Unit</label>
                                <div class="col-sm-10">
                          <input type="text" asp-for="Unit" class="form-control" placeholder="">
                                    <span asp-validation-for="Unit"></span>
                       </div>
                       </div>
               </div>
                          <div class="form-group">
                       <div class="form-outline">
                          <label for="ToolName" class="col-sm-2 control-label">Comments</label>
                                <div class="col-sm-10">
                            <textarea  asp-for="Description" class="form-control" placeholder="Comments"></textarea>
                                    <span asp-validation-for="Description"></span>
                       </div>
                       </div>
               </div>
            </div>


            <!-- /.box-body -->
            <div class="card-footer">

                <a class="btn btn-mini btn-primary" href='@Url.Content("/ToolSetup/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Create</button>

            </div>
            <!-- /.box-footer -->
        </form>
    </div>

    </div>
    </div>
    <!-- /.box -->
</section>




