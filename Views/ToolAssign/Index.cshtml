@model LILI_TTS.Models.TblToolAssign

<section class="content-header">

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="breadcrumb-item"><a href="#">Tools Allocation</a></li>

    </ol>

</section>
<!-- Main content -->
<section class="content container-fluid">

            <div class="card">
                    <div class="card-body">
                        <div class="col-sm-12">
                       
                                <form class="form-horizontal" asp-controller="ToolAssign" asp-action="AssignTools" method="post">
                            
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="inputEmail3" class="col-sm-1 control-label">TSA</label>
                                            <div class="col-sm-4">
                                <Select asp-for="Tsacode" class="form-control select2" onchange="GetTsaDetails()" placeholder="" asp-items="@(new SelectList(ViewBag.ListOfTSA,"Tsacode","Tsaname"))">
              
                                                </Select>
                                                <span asp-validation-for="Tsacode"></span>
                                            </div>
                                            <label for="inputEmail3" class="col-sm-1 control-label">Designation</label>
                                            <div class="col-sm-4">
                                                <input type="text"  id="Designation"class="form-control" placeholder="" readonly>
                                                <span asp-validation-for="Tsacode"></span>
                                            </div>
                                        </div>
                                    

                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="inputEmail3" class="col-sm-1 control-label">Area</label>
                                            <div class="col-sm-4">
                                                <input type="text" id="Area" class="form-control" placeholder="" readonly>
                                                <span asp-validation-for="Tsacode"></span>
                                            </div>
                                            <label for="inputEmail3" class="col-sm-1 control-label">Region</label>
                                            <div class="col-sm-4">
                                                <input type="text" id="Region"class="form-control" placeholder="" readonly>
                                                <span asp-validation-for="Tsacode"></span>
                                            </div>
                                    </div>
                                    

                                    </div>


                                    <div class="form-group">
                                        <div class="row">
                                            <label for="inputEmail3" class="col-sm-1 control-label">Tool Name</label>
                                            <div class="col-sm-4">
                                            <Select asp-for="ToolCode" class="form-control" onchange="GetToolInfo()" placeholder="" asp-items="@(new SelectList(ViewBag.ToolList,"ToolCode","ToolName"))">
                                             @*    @foreach (var item in @ViewBag.ToolList)
                                                    {
                                                        <option value=@item.ToolCode> @item.ToolName</option> 

                                                    } *@
                                                </Select>
                                              @*   <span asp-validation-for="ToolCode"></span> *@
                                            </div>
                                            <label for="inputEmail3" class="col-sm-1 control-label">Brand</label>
                                            <div class="col-sm-4">
                                                <input type="text" id="Brand" class="form-control" placeholder="" readonly>
                             
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group">

                                        <div class="row ">
                                            <label for="inputEmail3" class="col-sm-1 control-label">Action</label>
                                            <div class="col-sm-4">
                                <Select asp-for="ActionCode" class="form-control" placeholder="" asp-items="@(new SelectList(ViewBag.ListOfAction,"ActionCode","ActionName"))">
                                                </Select>
                                            </div>
                                            <label for="inputEmail3" class="col-sm-1 control-label">Quantity</label>

                                            <div class="col-sm-4">
                                                <div class="row" style="padding-left:10px">
                                                    <input type="text" asp-for="Quantity" class="form-control col-sm-2">
                                                    <input type="text" id="CurrentQty" class="form-control  col-sm-2" readonly>
                                                </div>
                             
                                                <span asp-validation-for="Quantity"></span>
                                            </div>
                         
                                        </div>


                                    </div>

                                    <div class="form-group">
                                        <div class="row">
                                            <label for="inputEmail3" class="col-sm-1 control-label">Action Type</label>
                                            <div class="col-sm-4">
                                                <Select asp-for="ActionTypeCode" class="form-control" placeholder="" asp-items="@(new SelectList(ViewBag.ListOfActionType,"ActionTypeCode","ActionTypeName"))">
                                                </Select>
                                                <span asp-validation-for="ToolCode"></span>
                                            </div>
                                            <label for="inputEmail3" class="col-sm-1 control-label">Action Date</label>
                                            <div class="col-sm-2">
                                                <input type="date" asp-for="ActionDate" class="form-control" placeholder="" >

                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <label for="ToolName" class="col-sm-1 control-label">Comments</label>
                                            <div class="col-sm-9">
                                                <textarea asp-for="Description" class="form-control" placeholder="Comments"></textarea>
                                                <span asp-validation-for="Description"></span>
                                            </div>

                                        </div>


                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 text-right">
                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </div>

                                        </div>


                                    </div>

                                </form>

                      

                  
                    </div>


                    <div class="card-footer">
              
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="col-sm-12">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr >
                                    <th style="text-align:center;"> Tool Code</th>
                                    <th style="text-align:center;">Tool Name</th>
                                    <th style="text-align:center;">Action</th>
                                    <th style="text-align:center;">Action Type</th>
                                    <th style="text-align:center;">Quantity</th>
                                    <th style="text-align:center;">Unit</th>
                                    <th style="text-align:center;">Date</th>
                                    <th style="text-align:center;">Comments</th>
                                    <th style="text-align:center;">Action</th>
                                </tr>
                            </thead>
                            <tbody id="tblBodyData">
                              
                              
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>

    </div>
    <!-- /.row -->
</section>
<script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var tsacode = $("#Tsacode").val();
        if (tsacode != 0) {
            GetTsaDetails();
        }
       });
    function GetTsaInfo() { 
        var tsacode = $("#Tsacode").val();
        if (tsacode != "" || tsacode != null) {
            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("GetTsaAssignedDetailInfo", "ToolAssign")',
                    data: {
                        vTsaCode: tsacode
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {
                        if (result == true) {
                            
                        }
                      

                    }
                });
        }
    }
    function GetToolInfo() {
        var toolcode = $("#ToolCode").val();
        if (toolcode != "" || toolcode != null) {
            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("GetToolInfo", "ToolAssign")',
                    data: {
                        vToolCode: toolcode
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {
                        
                          
                        if (result.length != 0) {
                            $("#Brand").val(result[0].brand);
                            $("#CurrentQty").val(result[0].unit);
                        }
                        else {
                            $("#Brand").val("");
                            $("#CurrentQty").val("");
                        }
                         
                       
                        


                    }
                });
        }
    }
    function GetTsaDetails(){
        var tsacode = $("#Tsacode").val();
        if (tsacode != "" || tsacode != null) {
            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("GetTsaAssignedDetailInfo", "ToolAssign")',
                    data: {
                        vTsaCode: tsacode
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {

                        console.log(result);
                        if (result.length != 0) {
                            $("#tblBodyData").empty();
                            $("#Designation").val(result[0].designation);
                            $("#Area").val(result[0].areaName);
                            $("#Region").val(result[0].regionName);
                            let data = result[0].htmlBuilder;
                            if(data != null || data != '')
                            {
                                $("#tblBodyData").append(data);
                            }
                        }
                        else {
                           
                            $("#Designation").val("");
                            $("#Area").val("");
                            $("#Region").val("");
                            $("#tblBodyData").empty();
                        }





                    }
                });
        }

    }
    function Delete(id) {
        //alert(id)
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("Delete", "ToolAssign")',
                    data: {
                        vId: id
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {
                        if (result == true) {
                            var baseUrl = "/Index";
                            alert("Delete Succesful.");
                            window.location.reload();
                        }
                        else {
                            alert("Can't delete, May have data dependency !");
                        }

                    }
                });
        }
    }
 
</script>




